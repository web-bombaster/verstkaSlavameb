mixin collectionMiniSlider(src)
	img(src="img/collection-slider/big/"+src alt="" loading="lazy").collection-mini-slider__item.swiper-slide

mixin collectionBigSlider(src)
	img(src="img/collection-slider/big/"+src alt="" loading="lazy").collection-big-slider__item.swiper-slide

//- mixin collectionBigSlider(src)
	a(href="#").swiper-slide.collection-big-slider__item
		img(src="img/collection-slider/big/"+src alt="" loading="lazy")

mixin colorsCollectionImg(src, colorName)
	a(data-colorName=""+colorName).colors-collection__item
		img(src="img/collection-colors/"+src alt="" loading="lazy").colors-collection__img

