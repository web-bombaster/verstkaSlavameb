mixin collectionItem(src, title)
	a(href="#").collection__item.swiper-slide
		.collection__img-box
			img(src="img/collection/"+src, alt="").collection__img
		span.collection__item-title #{title}

section.collection
	.full-container.collection__container
		h2.section-header.section-header--mini.collection__title Популярные коллекции
		.collection__slider.swiper
			.collection__box.swiper-wrapper
				+collectionItem('01.jpg', 'Lemo')
				+collectionItem('02.jpg', 'Васанта')
				+collectionItem('03.jpg', 'Канцлер')
				+collectionItem('04.jpg', 'Саньяна')
		.collection__pagination
		.collection__prev
		.collection__next
