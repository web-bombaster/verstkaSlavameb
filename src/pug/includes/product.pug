mixin product(src, title, descr, price)
	a.catalog__item.product(href="#")
		.product__box
			.product__img
				img(src="img/product/"+src, alt="")
			.product__title #{title}
			.product__descr #{descr}
			.product__price #{price}

mixin product-sale(sale, src, title, descr, price)
	a.catalog__item.product(href="#")
		.product__box
			.product__badge
				span.product__sale #{sale}
			.product__img
				img(src="img/product/"+src, alt="")
			.product__title #{title}
			.product__descr #{descr}
			.product__price #{price}


